<% layout("/layouts/boilerplate") -%>
<style>
     body
     {
            padding:0;
            margin:0;
            background-color: #183154;
            color:#fff;
    }
</style>
<body>
    <!-- <%- include("../includes/navbar.ejs") %> -->
    <div class="row" >
        <div class="col-8 offset-2">
            <h3 class="mt-3">Create New Post</h3>
            <form method="post" action="/news" class="needs-validation" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="news[title]" id="title" placeholder="title" class="form-control" required>
                    <div class="invalid-feedback">Title name should be valid</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="news[description]" id="description" placeholder="description"
                        class="form-control" required></textarea>
                        <div class="invalid-feedback">Description name should be valid</div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image</label>
                    <input type="file" name="news[image][url]" id="image" placeholder="upload image" required
                        class="form-control">
                        <div class="invalid-feedback">upload Image</div>
                </div>
               <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input  name="news[price]" id="price" placeholder="price" class="form-control">
                    <div class="invalid-feedback">Price name should be valid</div>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="news[country]" id="country" placeholder="country" class="form-control" required>
                    <div class="invalid-feedback">Country name should be valid</div>
                </div>
               </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="news[location]" id="location" placeholder="location" class="form-control" required>
                    <div class="invalid-feedback">Location name should be valid</div>
                </div>
                <button class="btn btn-success">Post</button>
            </form>
        </div>
    </div>
</body>
</html>