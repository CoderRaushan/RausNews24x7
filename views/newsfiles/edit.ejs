<% layout("/layouts/boilerplate") -%>
    <style>
        body {
            padding: 0;
            margin: 0;
            background-color: #183154;
            color: #fff;
        }
    </style>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <h3 class="mt-3">Create New Post</h3>
                <form method="post" action="/news/<%= news.id %>?_method=PUT" class="needs-validation" novalidate
                    enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="category" class="form-label">Category</label>
                        <select id="category" name="news[category]" class="form-control">
                            <option value="" disabled selected>Select a category</option>
                            <option value="Trending">Trending</option>
                            <option value="Entertainment">Entertainment</option>
                            <option value="Cricket">Cricket</option>
                            <option value="FootBall">FootBall</option>
                            <option value="Cities">Cities</option>
                            <option value="Education">Education</option>
                            <option value="WorldNews">WorldNews</option>
                            <option value="Science">Science</option>
                            <option value="Election">Election</option>
                            <option value="Weather">Weather</option>
                            <option value="Technology">Technology</option>
                            <option value="Business">Business</option>
                            <option value="Health">Health</option>
                            <option value="Sports">Sports</option>
                            <option value="Environment">Environment</option>
                            <option value="Crime">Crime</option>
                            <option value="Lifestyle">Lifestyle</option>
                            <option value="Opinion">Opinion</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" name="news[title]" id="title" class="form-control" value="<%= news.title %>"
                            required>
                        <div class="invalid-feedback">Title should be valid</div>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Image</label>
                        <input type="file" name="news[image][url]" id="image" placeholder="upload new image"
                            class="form-control">
                        <div class="invalid-feedback">Upload Your Image</div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="news[description]" id="description" required
                            class="form-control"><%= news.description %></textarea>
                        <div class="invalid-feedback">Description should be valid</div>
                    </div>
                    <div class="div">
                        <img src="<%= upadateImgLink %>" alt="news image">
                    </div>


                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" name="news[country]" required id="country" value="<%= news.country %>"
                            placeholder="country" class="form-control">
                        <div class="invalid-feedback">Country name should be valid</div>
                    </div>

                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" name="news[location]" required value="<%= news.location %>" id="location"
                            placeholder="location" class="form-control">
                        <div class="invalid-feedback">Location should be valid</div>
                    </div>
                    <button class="btn btn-warning">Update</button>
                </form>
            </div>
        </div>
    </body>

    </html>