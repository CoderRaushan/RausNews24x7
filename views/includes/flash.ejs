
<!-- for success -->
<% if(successMsg  && successMsg.length) {%>
  <div class="alert alert-warning alert-dismissible fade show col-lg-4 offset-lg-4 col-sm-0 offset-sm-0" role="alert">
    <%= successMsg %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<!-- for error -->

<% if( errorMsg && errorMsg.length) {%>
  <div class="alert alert-denger alert-dismissible fade show col-lg-4 offset-lg-4 col-sm-0 offset-sm-0" role="alert">
    <%= errorMsg %>
    <button type="button" class="btn-close text-white" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>  
<% } %>

<!-- for delete -->

<% if( deleteMsg && deleteMsg.length) {%>
  <div class="alert alert-warning alert-dismissible fade show col-lg-4 offset-lg-4 col-sm-0 offset-sm-0" role="alert">
    <%= deleteMsg %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>  
<% } %>