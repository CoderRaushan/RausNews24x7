<% layout("/layouts/boilerplate") -%>
    <div class="row mt-3">
        <h1 class="col col-lg-6 offset-lg-3 mt-4">SignUp for RausNews24x7</h1>
        <div class="col-lg-6 offset-lg-3">
                <form action="/signup" method="post" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label for="username" class="form-label">UserName</label>
                        <input type="text" name="username" id="username" class="form-control" required>
                        <div class="invalid-feedback">username should be valid</div>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" name="email" id="email" class="form-control" required>
                        <div class="invalid-feedback">Email should be valid</div>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" name="password" id="password" class="form-control" required>
                        <div class="invalid-feedback">password should be valid</div>
                    </div>
                        <button class="btn btn-warning mb-5">Register</button>
                </form>
        </div>
    </div>